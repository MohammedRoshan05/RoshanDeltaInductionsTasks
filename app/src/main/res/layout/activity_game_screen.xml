<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".GameScreen">

    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:numColumns="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player2_score"
        android:layout_width="91dp"
        android:layout_height="53dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/gamescreenoval"
        android:gravity="center"
        android:rotation="180"
        android:text="0"
        android:textColor="#01c1f0"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/Player2_display"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Player2_display"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/gamescreenarrow"
        android:gravity="center"
        android:hint="Player2"
        android:textColorHint="#01c1f0"
        android:textColor="#01c1f0"
        android:rotation="180"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Player1_display"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/gamescreenarrow"
        android:gravity="center"
        android:fontFamily=""
        android:hint="Player1"
        android:textColor="#ff5f57"
        android:textColorHint="#ff5f57"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player1_score"
        android:layout_width="91dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/gamescreenoval"
        android:gravity="center"
        android:text="0"
        android:textColor="#ff5f57"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Player1_display" />


</androidx.constraintlayout.widget.ConstraintLayout>